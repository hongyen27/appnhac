<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageviewbaihatyeuthich"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/txttenbaihatyeuthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/imageviewbaihatyeuthich"
        android:textColor="#363636"
        android:textSize="18sp"
        android:text="Ten bai hat"/>
    <TextView
        android:id="@+id/txtcasibaihatyeuthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttenbaihatyeuthich"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewbaihatyeuthich"
        android:singleLine="true"
        android:text="Ca Si"
        android:textSize="18sp"
        android:textColor="#8c8a8a"/>
    <ImageView
        android:id="@+id/imageviewluotthich"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>