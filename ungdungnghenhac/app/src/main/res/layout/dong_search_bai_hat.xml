<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageviewSearchbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/txtsearchtenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewSearchbaihat"
        android:text="Ten bai hat"
        android:textColor="#0a0a0a"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/txtsearchtencasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewSearchbaihat"
        android:text="Casi"
        android:textColor="#6e6d6d"
        android:textSize="18sp"
        android:layout_below="@id/txtsearchtenbaihat"/>
    <ImageView
        android:id="@+id/imageviewSearchluoothich"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>


</RelativeLayout>